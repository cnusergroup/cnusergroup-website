---
import { getLanguageFromUrl, t } from '../../utils';
import { getQRImage } from '../../utils/images';

const lang = getLanguageFromUrl(Astro.url);
const qrCodeImage = getQRImage('wechatOfficial');
---

<!-- 微信二维码弹窗 -->
<div 
  id="wechat-qr-modal" 
  class="fixed inset-0 z-50 hidden items-center justify-center bg-black bg-opacity-50 backdrop-blur-sm"
  onclick="hideWeChatQR()"
>
  <div 
    class="bg-white rounded-lg shadow-2xl max-w-sm w-full mx-4 transform transition-all duration-300 scale-95 hover:scale-100"
    onclick="event.stopPropagation()"
  >
    <!-- Header -->
    <div class="flex items-center justify-between p-6 border-b border-gray-200">
      <div class="flex items-center space-x-3">
        <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center">
          <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
            <path d="M8.691 2.188C3.891 2.188 0 5.476 0 9.53c0 2.212 1.17 4.203 3.002 5.55a.59.59 0 0 1 .213.665l-.39 1.48c-.019.07-.048.141-.048.213 0 .163.13.295.29.295a.326.326 0 0 0 .167-.054l1.903-1.114a.864.864 0 0 1 .717-.098 10.16 10.16 0 0 0 2.837.403c.276 0 .543-.027.811-.05-.857-2.578.157-4.972 1.932-6.446 1.703-1.415 3.882-1.98 5.853-1.838-.576-3.583-4.196-6.348-8.596-6.348zM5.785 5.991c.642 0 1.162.529 1.162 1.18 0 .659-.52 1.188-1.162 1.188-.642 0-1.162-.529-1.162-1.188 0-.651.52-1.18 1.162-1.18zm5.813 0c.642 0 1.162.529 1.162 1.18 0 .659-.52 1.188-1.162 1.188-.642 0-1.162-.529-1.162-1.188 0-.651.52-1.18 1.162-1.18zm5.34 2.867c-1.797-.052-3.746.512-5.28 1.786-1.72 1.428-2.687 3.72-1.78 6.22.942 2.453 3.666 4.229 6.884 4.229.826 0 1.622-.12 2.361-.336a.722.722 0 0 1 .598.082l1.584.926a.272.272 0 0 0 .14.045c.134 0 .24-.111.24-.248 0-.06-.023-.12-.038-.177l-.327-1.233a.582.582 0 0 1 .134-.98c1.516-1.121 2.497-2.795 2.497-4.626 0-3.697-3.446-6.611-7.013-6.688zm-3.729 3.334c.413 0 .748.336.748.748 0 .413-.335.747-.748.747a.748.748 0 1 1 0-1.495zm5.748 0c.413 0 .747.336.747.748 0 .413-.334.747-.747.747a.748.748 0 1 1 0-1.495z"/>
          </svg>
        </div>
        <div>
          <h3 class="text-lg font-semibold text-gray-900">
            {t('social.wechat', lang)}
          </h3>
          <p class="text-sm text-gray-500">
            {lang === 'zh' ? '扫码关注公众号' : 'Scan to follow'}
          </p>
        </div>
      </div>
      
      <button 
        onclick="hideWeChatQR()"
        class="text-gray-400 hover:text-gray-600 transition-colors duration-200"
        aria-label={lang === 'zh' ? '关闭' : 'Close'}
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    
    <!-- QR Code -->
    <div class="p-6 text-center">
      <div class="inline-block p-4 bg-white rounded-lg shadow-inner">
        <img 
          src={qrCodeImage}
          alt={t('social.officialAccount', lang)}
          class="w-48 h-48 mx-auto rounded-lg"
          loading="lazy"
        />
      </div>
      
      <p class="mt-4 text-sm text-gray-600 leading-relaxed">
        {t('social.officialAccount', lang)}
      </p>
    </div>
  </div>
</div>

<style>
  #wechat-qr-modal {
    animation: fadeIn 0.3s ease-out;
  }
  
  #wechat-qr-modal .bg-white {
    animation: slideUp 0.3s ease-out;
  }
  
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
  
  @keyframes slideUp {
    from {
      transform: translateY(20px) scale(0.95);
      opacity: 0;
    }
    to {
      transform: translateY(0) scale(1);
      opacity: 1;
    }
  }
</style>

<script>
  // 关闭微信二维码弹窗
  function hideWeChatQR() {
    const modal = document.getElementById('wechat-qr-modal');
    if (modal) {
      modal.style.display = 'none';
      document.body.classList.remove('modal-open');
    }
  }
  
  // 键盘事件处理
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      hideWeChatQR();
    }
  });
</script>