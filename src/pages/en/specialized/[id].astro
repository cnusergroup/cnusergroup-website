---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import SpecializedCommunityDetail from '../../../components/sections/SpecializedCommunityDetail.astro';
import { getLanguageFromUrl, getLocalizedValue, t, getRoute } from '../../../utils';

export async function getStaticPaths() {
  const { getSpecializedCommunities } = await import('../../../utils');
  const communities = getSpecializedCommunities();
  
  return communities.map((community) => ({
    params: { id: community.id },
    props: { community }
  }));
}

const { community } = Astro.props;
const lang = getLanguageFromUrl(Astro.url);

if (!community) {
  return Astro.redirect('/en/404');
}

const communityName = getLocalizedValue(community.name, lang);
const pageTitle = `${communityName} - ${t('specialized.title', lang)}`;
const pageDescription = getLocalizedValue(community.description, lang);
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <!-- Breadcrumb Navigation -->
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4" aria-label="Breadcrumb">
    <ol class="flex items-center space-x-2 text-sm text-gray-500">
      <li>
        <a href={`${(import.meta.env.BASE_URL || '/').replace(/\/$/, '')}/en`} class="hover:text-orange-600" style="transition: color 0.2s;">Home</a>
      </li>
      <li>
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
        </svg>
      </li>
      <li>
        <a href={`${(import.meta.env.BASE_URL || '/').replace(/\/$/, '')}/en/specialized`} class="hover:text-orange-600" style="transition: color 0.2s;">Specialized Communities</a>
      </li>
      <li>
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
        </svg>
      </li>
      <li class="text-gray-900 font-medium truncate">{communityName}</li>
    </ol>
  </nav>
  
  <!-- Specialized Community Detail Content -->
  <SpecializedCommunityDetail community={community} lang={lang} />
  
  <!-- Back to Specialized Communities -->
  <section class="py-8 bg-gray-50">
    <div class="container-custom text-center">
      <a 
        href={getRoute('specialized', lang)}
        class="inline-flex items-center text-aws-orange hover:text-orange-600 transition-colors duration-200 font-medium"
      >
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to Specialized Communities
      </a>
    </div>
  </section>
</BaseLayout>
