---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getLanguageFromUrl } from '../../utils';

const lang = getLanguageFromUrl(Astro.url);
---

<BaseLayout title="Terms of Service">
  <div class="min-h-screen bg-gray-50 py-16">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto bg-white rounded-lg shadow-lg p-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-8">
          Terms of Service
        </h1>
        
        <div class="prose prose-lg max-w-none">
          <p class="text-gray-600 mb-6">Last updated: January 1, 2024</p>
          
          <h2>Acceptance of Terms</h2>
          <p>By accessing and using this website, you agree to comply with these terms of service. If you do not agree to these terms, please do not use this website.</p>
          
          <h2>Use License</h2>
          <p>We grant you a limited, non-exclusive, non-transferable license to access and use this website for personal and non-commercial purposes only.</p>
          
          <h2>User Conduct</h2>
          <p>You agree not to:</p>
          <ul>
            <li>Violate any applicable laws or regulations</li>
            <li>Infringe on others' intellectual property rights</li>
            <li>Post harmful, threatening, defamatory, or other inappropriate content</li>
            <li>Interfere with the normal operation of the website</li>
          </ul>
          
          <h2>Disclaimer</h2>
          <p>This website is provided "as is" and we make no warranties regarding the accuracy, completeness, or reliability of the website content.</p>
          
          <h2>Contact Us</h2>
          <p>If you have any questions about these Terms of Service, please contact us:</p>
          <p>Email: legal@cnusergroup.org</p>
        </div>
        
        <div class="mt-8 pt-8 border-t border-gray-200">
          <a 
            href={`${(import.meta.env.BASE_URL || '/').replace(/\/$/, '')}/en/`}
            class="inline-flex items-center px-6 py-3 bg-aws-orange text-white rounded-lg hover:bg-orange-600 transition-colors duration-200"
          >
            Back to Home
          </a>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>