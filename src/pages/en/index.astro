---
import BaseLayout from '../../layouts/BaseLayout.astro';
import HeroBanner from '../../components/sections/HeroBanner.astro';
import GlobalCommunity from '../../components/sections/GlobalCommunity.astro';
import CityGrid from '../../components/sections/CityGrid.astro';
import CommunityBuilding from '../../components/sections/CommunityBuilding.astro';
import SpecializedCommunityCard from '../../components/ui/SpecializedCommunityCard.astro';
import Button from '../../components/ui/Button.astro';
import { getLanguageFromUrl, t, getActiveSpecializedCommunities, getRoute } from '../../utils';
import { getUIImage } from '../../utils/images';

const lang = getLanguageFromUrl(Astro.url);

// Get active specialized communities
const activeSpecializedCommunities = getActiveSpecializedCommunities();
---

<BaseLayout 
  title={t('site.title', lang)}
  description={t('site.description', lang)}
>
  <HeroBanner />
  <GlobalCommunity />
  <CityGrid lang={lang} showAll={false} forceHorizontalLayout={true} />

  <!-- Specialized Communities Section -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="container-custom">
      <!-- Section Header -->
      <div class="text-center mb-16">
        <div class="flex items-center justify-center mb-6">
          <img 
            src={getUIImage('titleLeft')}
            alt="" 
            class="h-8"
          />
          <h2 class="text-3xl lg:text-4xl font-bold text-aws-blue mx-6">
            {t('specialized.title', lang)}
          </h2>
          <img 
            src={getUIImage('titleRight')}
            alt="" 
            class="h-8"
          />
        </div>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
          {t('specialized.subtitle', lang)}
        </p>
      </div>
      
      <!-- Specialized Communities Grid -->
      {activeSpecializedCommunities.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8 mb-12">
          {activeSpecializedCommunities.map((community) => (
            <SpecializedCommunityCard 
              community={community} 
              lang={lang}
              showStatus={community.active}
            />
          ))}
        </div>
      ) : (
        <div class="text-center py-16">
          <div class="text-gray-400 mb-4">
            <svg class="w-16 h-16 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-600 mb-2">
            Specialized Communities Coming Soon
          </h3>
          <p class="text-gray-500">
            We are building more specialized communities
          </p>
        </div>
      )}
      
      <!-- View All Specialized Communities Button -->
      <div class="text-center">
        <Button 
          href={getRoute('specialized', lang)}
          variant="outline"
          size="lg"
          class="inline-flex items-center px-8 py-4 text-lg font-semibold"
        >
          {t('specialized.viewAll', lang)}
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </Button>
      </div>
    </div>
  </section>

  <CommunityBuilding />
</BaseLayout>