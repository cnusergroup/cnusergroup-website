---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getLanguageFromUrl } from '../utils';

const lang = getLanguageFromUrl(Astro.url);
---

<BaseLayout title={lang === 'zh' ? '隐私政策' : 'Privacy Policy'}>
  <div class="min-h-screen bg-gray-50 py-16">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto bg-white rounded-lg shadow-lg p-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-8">
          {lang === 'zh' ? '隐私政策' : 'Privacy Policy'}
        </h1>
        
        <div class="prose prose-lg max-w-none">
          {lang === 'zh' ? (
            <div>
              <p class="text-gray-600 mb-6">最后更新：2024年1月1日</p>
              
              <h2>信息收集</h2>
              <p>我们可能收集您提供的个人信息，包括但不限于姓名、邮箱地址、联系方式等。</p>
              
              <h2>信息使用</h2>
              <p>我们使用收集的信息来：</p>
              <ul>
                <li>提供和维护我们的服务</li>
                <li>改善用户体验</li>
                <li>发送相关通知和更新</li>
                <li>回应用户询问</li>
              </ul>
              
              <h2>信息保护</h2>
              <p>我们采取适当的安全措施来保护您的个人信息，防止未经授权的访问、使用或披露。</p>
              
              <h2>联系我们</h2>
              <p>如果您对本隐私政策有任何疑问，请联系我们：</p>
              <p>邮箱：privacy@cnusergroup.org</p>
            </div>
          ) : (
            <div>
              <p class="text-gray-600 mb-6">Last updated: January 1, 2024</p>
              
              <h2>Information Collection</h2>
              <p>We may collect personal information you provide, including but not limited to name, email address, contact information, etc.</p>
              
              <h2>Information Use</h2>
              <p>We use the collected information to:</p>
              <ul>
                <li>Provide and maintain our services</li>
                <li>Improve user experience</li>
                <li>Send relevant notifications and updates</li>
                <li>Respond to user inquiries</li>
              </ul>
              
              <h2>Information Protection</h2>
              <p>We take appropriate security measures to protect your personal information from unauthorized access, use, or disclosure.</p>
              
              <h2>Contact Us</h2>
              <p>If you have any questions about this Privacy Policy, please contact us:</p>
              <p>Email: privacy@cnusergroup.org</p>
            </div>
          )}
        </div>
        
        <div class="mt-8 pt-8 border-t border-gray-200">
          <a 
            href={lang === 'zh' ? '/' : '/en'}
            class="inline-flex items-center px-6 py-3 bg-aws-orange text-white rounded-lg hover:bg-orange-600 transition-colors duration-200"
          >
            {lang === 'zh' ? '返回首页' : 'Back to Home'}
          </a>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>