---
import BaseLayout from '../../layouts/BaseLayout.astro';
import CityDetail from '../../components/sections/CityDetail.astro';
import { getLanguageFromUrl, getCityById, getLocalizedValue, t, getRoute } from '../../utils';

export async function getStaticPaths() {
  const { getCities } = await import('../../utils');
  const cities = getCities();
  
  return cities.map((city) => ({
    params: { id: city.id },
    props: { city }
  }));
}

const { city } = Astro.props;
const lang = getLanguageFromUrl(Astro.url);

if (!city) {
  return Astro.redirect('/404');
}

const cityName = getLocalizedValue(city.name, lang);
const pageTitle = `${cityName} - ${t('cities.title', lang)}`;
const pageDescription = getLocalizedValue(city.description, lang);
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <!-- Breadcrumb Navigation -->
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4" aria-label="Breadcrumb">
    <ol class="flex items-center space-x-2 text-sm text-gray-500">
      <li>
        <a href={import.meta.env.BASE_URL || "/"} class="hover:text-orange-600" style="transition: color 0.2s;">首页</a>
      </li>
      <li>
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
        </svg>
      </li>
      <li>
        <a href={`${(import.meta.env.BASE_URL || '/').replace(/\/$/, '')}/cities`} class="hover:text-orange-600" style="transition: color 0.2s;">城市社区</a>
      </li>
      <li>
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
        </svg>
      </li>
      <li class="text-gray-900 font-medium truncate">{cityName}</li>
    </ol>
  </nav>
  
  <!-- City Detail Content -->
  <CityDetail city={city} lang={lang} />
  
  <!-- Back to Cities -->
  <section class="py-8 bg-gray-50">
    <div class="container-custom text-center">
      <a 
        href={getRoute('cities', lang)}
        class="inline-flex items-center text-aws-orange hover:text-orange-600 transition-colors duration-200 font-medium"
      >
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        {lang === 'zh' ? '返回城市列表' : 'Back to Cities'}
      </a>
    </div>
  </section>
</BaseLayout>